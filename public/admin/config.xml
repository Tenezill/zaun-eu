backend:
  name: github
  repo: your-github-user/your-fence-site
  branch: main
  base_url: https://<your-auth-worker>.workers.dev # optional if you use sveltia-cms-auth
media_folder: "public/uploads"
public_folder: "/uploads"

locale: de

collections:
  - name: fences
    label: Betonzaun-Elemente
    label_singular: Betonzaun-Element
    folder: "content/fences"
    create: true
    slug: "{{slug}}"
    format: "json"
    fields:
      - { name: "title", label: "Titel", widget: "string" }
      - { name: "slug", label: "Slug", widget: "string" }
      - { name: "category", label: "Kategorie", widget: "select", options: ["Dekor", "Sichtschutz", "Sonderlösung"] }
      - { name: "height", label: "Höhe (cm)", widget: "number" }
      - { name: "length", label: "Länge pro Element (cm)", widget: "number" }
      - { name: "weight", label: "Gewicht pro Element (kg)", widget: "number", required: false }
      - { name: "surface", label: "Oberfläche", widget: "string", hint: "z.B. Steinoptik anthrazit" }
      - { name: "colors", label: "Verfügbare Farben", widget: "list", field: { name: "color", label: "Farbe", widget: "string" } }
      - { name: "image", label: "Hauptbild", widget: "image" }
      - { name: "gallery", label: "Galerie", widget: "list", field: { name: "image", label: "Bild", widget: "image" }, required: false }
      - { name: "shortDescription", label: "Kurzbeschreibung", widget: "text" }
      - { name: "features", label: "Besonderheiten", widget: "list", field: { name: "feature", label: "Punkt", widget: "string" } }
      - { name: "isFeatured", label: "Auf Startseite hervorheben?", widget: "boolean", default: false }

  - name: projects
    label: Referenzprojekte
    folder: "content/projects"
    create: true
    slug: "{{slug}}"
    format: "json"
    fields:
      - { name: "title", label: "Titel", widget: "string" }
      - { name: "slug", label: "Slug", widget: "string" }
      - { name: "location", label: "Ort", widget: "string" }
      - { name: "year", label: "Jahr", widget: "number" }
      - { name: "fences", label: "Verwendete Zaun-Elemente", widget: "relation", collection: "fences", search_fields: ["title"], value_field: "slug", display_fields: ["title"], multiple: true }
      - { name: "image", label: "Hauptbild", widget: "image" }
      - { name: "gallery", label: "Galerie", widget: "list", field: { name: "image", label: "Bild", widget: "image" }, required: false }
      - { name: "description", label: "Beschreibung", widget: "markdown" }
